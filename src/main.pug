//- Используем стандартный шаблон Project
extends ./template/base_layout

block variables
    - var file_name = 'main'

//- Модифицируем head
block head
    - var pageTitle = 'Главная страница';
    - var pageDescription = 'Рандомное описание страницы'
    - var pageImage = 'images/content/test-image.jpg'

//- Выводим попапы
block popup
    include section/popups/feedback-popup.pug
    include section/ui-kit/popup.pug
    include section/popups/info-popup.pug
    +popup()(id="feedback", aria-hidden="true")
        +popup-close()
        +feedback-popup()
    +popup()(id="info-popup", aria-hidden="true" class="modal--info-popup")
        +popup-close()
        +info-popup()

//- Выводим content
