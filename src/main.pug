    include section/ui-kit/checkbox.pug
    include section/ui-kit/button.pug
    include section/ui-kit/icon.pug
    include section/ui-kit/switch.pug
    include section/ui-kit/range.pug
    include section/ui-kit/title.pug
    include section/ui-kit/select.pug
    include section/accordion.pug
    include section/card-list.pug
    include section/sort.pug

    +b('section').apartments
        .b-container.b-container--small
            +b.page-header
                +title({
                    type: 'h1',
                    title: 'Выбор квартиры',
                }).--h1
                +switch({
                    id: 'switch-filter',
                    contentUnchecked: 'на генплане',
                    contentChecked: 'по параметрам',
                })
        .b-container
            +b.filter
                .row.gy-4.mb-4.mb-sm-5
                    .col-12.col-sm-6.col-lg
                        +title({
                            type: 'h2',
                            title: 'Помещение'
                        }).--h2
