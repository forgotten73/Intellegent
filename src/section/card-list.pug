mixin card-list(data)
    include card.pug
    +b.card-list(class!=attributes.class)
        each item in data
            .col-12.col-sm-4.col-lg-3
                +card({
                    number: item.number,
                    id: item.id,
                    href: item.href,
                    titleLink: item.titleLink,
                    title: item.title,
                    items: item.items,
                    price: item.price,
                    priceOld: item.priceOld,
                    badge: item.badge,
                })