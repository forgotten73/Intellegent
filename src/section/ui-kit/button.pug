//- if <a>        link = true
//- if <button>   link = false

mixin button(obj)
    if obj.link == true
        a.btn( href=obj.href title=`${obj.content ? obj.content : obj.title}` )&attributes( attributes ) !{obj.content}
            block

    else
        button.btn&attributes( attributes ) !{obj.content}
            block
